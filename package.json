{
    "name": "neureal-wallet",
    "version": "0.0.1",
    "description": "A minimal Ethereum wallet for Neureal",
    "author": "Hunter Long <info@socialeck.com>",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "pack": "electron-builder --dir",
        "dist": "electron-builder"
    },
    "build": {
        "appId": "com.neurealwallet",
        "productName": "Neureal Wallet",
        "mac": {
            "category": "financial"
        },
        "linux": {
            "target": [
                "deb"
            ]
        },
        "win": {}
    },
    "repository": "https://github.com/hunterlong/neureal-wallet",
    "keywords": [
        "neureal",
        "neureal-wallet"
    ],
    "license": "MIT",
    "devDependencies": {
        "electron": "~1.6.2",
        "electron-builder": "^19.11.1"
    },
    "dependencies": {
        "clipboardy": "^1.1.4",
        "ethers": "^2.1.1"
    }
}
